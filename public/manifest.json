{
    "manifest_version": 3,
    "name": "Svelte Chrome Test",
    "description": "Test Svelte Chrome",
    "version": "0.0.1",

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["build/bundle.js"],
            "run_at": "document_end"
        }
    ],

    "background": {
      "service_worker": "background.js",
      "type": "module"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],

    "host_permissions": [
        "https://*/*"
    ]
}
